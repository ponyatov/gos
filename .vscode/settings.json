{
    "multiCommand.commands": [
        { "command": "multiCommand.f11",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make doxy \u000D"}}]},
        { "command": "multiCommand.f12",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make run \u000D"}}]},
        { "command": "multiCommand.altx",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make all \u000D"}}]},
        { "command": "multiCommand.alts",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make format \u000D"}}]},
    ],

    // files
    "files.exclude": {
        "docs/**": true,
        "doc/html/**": true,
    },
    "files.watcherExclude": {
        "ref/**": true,
    },
    "files.associations": {
        "lib/*.ini": "properties", "lib/*.g": "properties",
        ".gdbinit": "properties", "*.cfg": "properties"
    },

    // editor
    "files.eol": "\n",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "workbench.tree.indent": 24,
    "editor.fontSize": 14,
    "editor.lineNumbers": "on",
    "explorer.autoReveal": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "git.enabled": false,
    "terminal.integrated.copyOnSelection": true,

    // clang-format
    "clang-format.executable":     "clang-format",
    "clang-format.fallbackStyle":  "Google",
    "clang-format.style":          "file",

    // C++
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     false
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     false
    },
    // "C_Cpp.intelliSenseEngine": "Tag Parser",

    // cmake
    "cmake.configureSettings": {
    },
    "cmake.sourceDirectory"  : "${workspaceFolder}",
    "cmake.buildDirectory"   : "${workspaceFolder}/tmp/${workspaceFolderBasename}",
    "cmake.generator"        : "Unix Makefiles",

    // Python
    "autopep8.path": ["${workspaceFolder}/bin/autopep8", "autopep8"],
    "autopep8.args": ["--ignore E26,E302,E305,E401,E402,E701,E702"],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
    },

    // msys
    "terminal.integrated.defaultProfile.windows": "UCRT64",
    "terminal.integrated.profiles.windows": {
        "UCRT64": {
            "path": "C:\\msys64\\usr\\bin\\bash.exe",
            "args": [ "--login", "-i" ],
            "env": { "MSYSTEM": "UCRT64", "CHERE_INVOKING": "1" }
        }
    },
    // "cmake.cmakePath": "C:\\msys64\\usr\\bin\\cmake"
}
