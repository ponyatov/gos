{
    "version": 6,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/tmp/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/bin/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug",
                "CFLAGS": "-I${sourceDir}/inc -I${sourceDir}/${presetName}/inc -I${sourceDir}/tmp",
                "DEBUG": "-O0 -g3"
            }
        },
        {
            "name": "linux",
            "inherits": "common",
            "toolchainFile": "${sourceDir}/cmake/x86_64-linux-gnu.cmake"
        },
        {
            "name": "mingw64",
            "inherits": "common",
            "toolchainFile": "${sourceDir}/cmake/x86_64-w64-mingw64.cmake"
        }
    ]
}
