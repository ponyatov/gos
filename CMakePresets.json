{
    "version": 6,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/tmp/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/bin/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_FLAGS": "-g3 -O0",
                "CMAKE_CXX_FLAGS": "-g3 -O0",
                "CMAKE_VERBOSE_MAKEFILE": "YES",
                "OS": "${presetName}"
            }
        },
        {
            "name": "linux",
            "inherits": "common",
            "toolchainFile": "${sourceDir}/cmake/x86_64-linux-gnu.cmake"
        },
        {
            "name": "msys",
            "inherits": "common",
            "toolchainFile": "${sourceDir}/cmake/x86_64-w64-mingw64.cmake"
        }
    ]
}
